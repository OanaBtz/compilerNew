.th .se bilag1 = 'kvittering'
.if &BILAG = 2
.th .se bilag1 = 'aftale'
.if &BILAG = 3
.th .se bilag1 = 'nota'
.if &BILAG = 4
.th .se bilag1 = 'andet'
.if &BILAG = 5
