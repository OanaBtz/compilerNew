.*******TEST AF VALG AF INSTRUMENT****************************************
.*OPSPLIT REG OG KONTO NUMMER ********************************************
.su off
.se reg1 = substr &GENKTONR 1 4
.se kto1 = substr &GENKTONR 5 14
.se regnr = substr &LANGKTONR 1 4
.se ktonr = substr &LANGKTONR 5 21
.su on
.*TEST PÅ OM DER ER TASTET 1,2 ELLER 3 I VALG AF INSTRUMENT **************
.if &GENVALG > 0
.an &GENVALG < 4
.th .go TYPEOK
.el .mg/T/Valg af instrument skal være 1, 2 eller 3./
...TYPEOK
.*TEST OM DET ER EN ANDEL, AKTIE ELLER ANPART ****************************
.if &GENVALG = 1
.th .se instru = 'andele'
.th .se instruf = 'andelene'
.th .se instrus = 'andelenes'
.if &GENVALG = 2
.th .se instru = 'aktier'
.th .se instruf = 'aktierne'
.th .se instrus = 'aktiernes'
.if &GENVALG = 3
.th .se instru = 'anparter'
.th .se instruf = 'anparterne'
.th .se instrus = 'anparternes'
.***********
.if &U'&GENVALG7 = R
.or &U'&GENVALG7 = K
.or &U'&GENVALG7 = A
.th .go PENOK
.el .mg/T/Valg af Pension skal være R, K eller A./
...PENOK
.************
.if &BILAG = 0
.or &BILAG > 7
.th.mg/T/Valg af deponering skal være mellem 1 og 7./
