.* Parameteren PRIMÆR anvendes til at styre udskrivningen af
.* forsendelsesadresse til primær kontohaver
.* og adresse til medkontohaver.
.* Første gang brevet kaldes fra Overtræksbehandlingssystemet - er
.* PRIMÆR = J, de næste gange brevet kaldes er PRIMÆR = N.
.*****************************************
.su off
.se dag = substr &DATO 1 2
.se mdr = substr &DATO 4 2
.se aar = substr &DATO 7 4
.su on
.* &dag.-&mdr.-&aar.
.if &mdr = 01
.th .se mdrx = januar
.if &mdr = 02
.th .se mdrx = februar
.if &mdr = 03
.th .se mdrx = marts
.if &mdr = 04
.th .se mdrx = april
.if &mdr = 05
.th .se mdrx = maj
.if &mdr = 06
.th .se mdrx = juni
.if &mdr = 07
.th .se mdrx = juli
.if &mdr = 08
.th .se mdrx = august
.if &mdr = 09
.th .se mdrx = september
.if &mdr = 10
.th .se mdrx = oktober
.if &mdr = 11
.th .se mdrx = november
.if &mdr = 12
.th .se mdrx = december
