.th .se streglng2 = 143,2mm
.th .go UDOM1.
.if &L'&RESULTA < 8
.th .se streglng1 = 103mm
.th .se streglng2 = 141mm
.th .go UDOM1.
.if &L'&RESULTA < 9
.th .se streglng1 = 99,5mm
.th .se streglng2 = 137,5mm
.th .go UDOM1.
.if &L'&RESULTA < 10
.th .se streglng1 = 97,5mm
.th .se streglng2 = 135,5mm
.th .go UDOM1.
.if &L'&RESULTA < 12
.th .se streglng1 = 96mm
.th .se streglng2 = 134mm
.th .go UDOM1.
.if &L'&RESULTA < 13
.th .se streglng1 = 94mm
.th .se streglng2 = 132mm
.th .go UDOM1.
.if &L'&RESULTA < 14
.th .se streglng1 = 92mm
.th .se streglng2 = 130mm
...UDOM1.
