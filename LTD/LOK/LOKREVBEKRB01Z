.se test = substr &KUNDENR 1 2
.if &test eq 00
.th .go test1
.el .go test2
...test1
 ¤ ¤ ¤ SE-nr.: &KUNDENR
.br
.th .go test3
...test2
 ¤ ¤ ¤ CPR-nr.: &KUNDENR
.br
