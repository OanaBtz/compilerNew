.se B37REAL = 1
.dm MIBKRFL on
.MIBKRF &*1
   &RN
   &RG
   &RB
.dm off
.dm MIBKRF on
.se INPUTKRF = &&*1
.se IKRFNA = SUBSTR &INPUTKRF 1 1
.se IKRFPN = SUBSTR &INPUTKRF 2 4
.if &U'&IKRFNA = B
.th .im B37BRF
.th .go SLUT
.if &U'&IKRFNA = N
.th .im B37NYK
.th .go SLUT
.if &U'&IKRFNA = R
.th .im B37RD
.th .go SLUT
...SLUT
.dm off

