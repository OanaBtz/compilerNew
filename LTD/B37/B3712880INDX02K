.* parameterafsn.
.dm KONVO on
.se KONVO = 1
.se INPUTT = &&*1
.se INPUTTV = &&*1
.se ANTDEC = 0
.se DEC = 0
.se TAL = ''
.se C1 = 0
.se LOOPTAL = 0
...LOOP
.se LOOPTAL = &LOOPTAL + 1
.if &LOOPTAL > 19
.th /002T/ Fejl i MIBKONVO &INPUTTV LOOP = &LOOPTAL kontakt Edb-afd.
.se C1 = &C1 + 1
.se LOOPTXT = SUBSTR '&INPUTT.' &C1 1
.if &C1 > 20
.th .go SLUT
.if .&LOOPTXT = .
.th .go SLUT
.if .&LOOPTXT = ..
.th .go LOOP
.if .&LOOPTXT = .,
.th .se DEC = 1
.th .go LOOP
.if .&DEC = .1
.th .se ANTDEC = &ANTDEC + 1
.se TAL = &TAL.&LOOPTXT.
.go LOOP
...SLUT
.se &*1 = &TAL
.dm off
