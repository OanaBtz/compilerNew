.****************  GENINDUD = ' ' Ikke skift på bank
.****************  GENINDUD = 'I' Egen bank er indtrædende
.****************  GENINDUD = 'U' Egen bank er udtrædende
.if &L'&GENINDUD eq 0
.th .se glregnr = &REGNR
.th .se glktonr = &KTONR
.th .se gldepnr = &GENDEPNR1
.th .se glbank  = &BANKNAVN
.th .se glafd   = &AFDNAVN
.th .se glafdby = &AFDBY
.th .se nyregnr = ' '
.th .se nyktonr = ' '
.th .se nydepnr = ' '
.th .se nybank  = ' '
.th .go ARB
.if &U'&GENINDUD eq U
.th .se glregnr = &REGNR
.th .se glktonr = &KTONR
.th .se gldepnr = &GENDEPNR1
.th .se glbank  = &BANKNAVN
.th .se glafd   = &AFDNAVN
.th .se glafdby = &AFDBY
.th .se nyregnr = &BANKREGNR
.th .se nyktonr = &GENKTO
.th .se nydepnr = &GENDEPNR
.th .se nybank  = &BKNAVN
.th .go ARB
.if &U'&GENINDUD eq I
.th .se glregnr = &BANKREGNR
.th .se glktonr = &GENKTO
.th .se gldepnr = &GENDEPNR
.th .se glbank  = &BKNAVN
.th .se glafd   = &BKAFD
.th .se glafdby = &BKBY
.th .se nyregnr = &REGNR
.th .se nyktonr = &KTONR
.th .se nydepnr = &GENDEPNR1
.th .se nybank  = &BANKNAVN
...ARB
.****************  arb = BL (INGEN arbejdsgiver udskrives)
.****************  arb = NY (Ny arbejdsgiver udskrives)
.****************  arb = GL (Gl arbejdsgiver udskrives)
.se arb = BL
.if &L'&GENT1 gt 0
.th .se arb = NY
.th .go B010
.if &L'&GENNAVN1 gt 0
.th .se arb = GL
...B010
.****************  Test på ordning1
.se ordn1 = N
.if &L'&GENT1 gt 0
.an &L'&GENNAVN1 gt 0
.th .se ordn1 = A
.th .go B020
.if &L'&GENT1 gt 0
.th .se ordn1 = B1
.th .go B020
.if &U'&GENUDGÅR eq J
.th .se ordn1 = B2
...B020
.su on
