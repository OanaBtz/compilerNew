.su off
.se year = substr &DATO 7 4
.* FREKVENS dannes *******************************************************
.if &E69VNEDB1 <> 2
.th .go NOFREKV
.if X&E69VFREKV1 = X1
.th .se nedfrek = 'hver måned'
.if X&E69VFREKV1 = X2
.th .se nedfrek = 'hvert kvartal'
.if X&E69VFREKV1 = X3
.th .se nedfrek = 'hvert år'
.if X&E69VFREKV1 = X4
.th .se nedfrek = substr &E69FRITXT1. 1 60
...NOFREKV
.if&E69VNEDB1 = 1
.th .se neddato = &BECDATO2.
.if &E69VNEDB1 = 2
.th .se neddato = &BECDATO3.
.su on
.* Kontotype (1/2) skal udfyldes ******************************************
.if &E69VKTOTP1 = 1
.or &E69VKTOTP1 = 2
.th .go INDOK1
.el .go INDKTOT
...INDOK1
.* Er kontotype 1 skal Maksimum udfyldes **********************************
.if &E69VKTOTP1 = 1
.an X&E69BELOBT2 le X0,00
.th .go INDMAXB
.* Nedbringes på én gang / Løbende nedbringelse skal udfyldes *************
.if &E69VNEDB1 = 1
.or &E69VNEDB1 = 2
.th .go INDOK2
.el .go INDKTON
...INDOK2
.* Overtræksbeløb skal udfyldes *******************************************
.if X&E69BELOBT1 le X0,00
.th .go INDOVTB
.* Er der svaret J eller N til Debetrente følger Cibor 3 ******************
.if &U'&E69JANEJ = J
.or &U'&E69JANEJ = N
.th .go INDOK4
.el .go INDCIBJN
...INDOK4
.* Er rentesats udfyldt ***************************************************
.if &L'&E69RPCT01 = 0
.th .go INDPCT
.* Er Nedbringes på én gang valgt skal Nedbringes den udfyldes ************
.if &E69VNEDB1 = 1
.mg/T/Dato Første gang skal vælges ved Løbende nedbringelse/
...INDNEDB
.mg/T/Beløb for løbende nedbringelse skal indtastes/
...INDNEDF
.mg/T/Frekvens for løbende nedbringelse skal vælges/
...INDNED4
.mg/T/Andet skal udfyldes når 4) Andet er valgt som frekvens/
...INDPRO
.mg/T/Rentesats skal markeres som (F)ast eller (V)ariabel/
...INDOK
.an &L'&BECDATO2 = 0
.th .go INDDATOE
.* Er Løbende nedbringelse valgt skal Første gang den udfyldes ************
.if &E69VNEDB1 = 2
.an &L'&BECDATO3 = 0
.th .go INDDATOL
.* Er Løbende nedbringelse valgt skal Nedbringes med udfyldes *************
.if &E69VNEDB1 = 2
.an &L'&E69BELOB3 = 0
.th .go INDNEDB
.* Er Løbende nedbringelse valgt skal Frekvens udfyldes *******************
.if &E69VNEDB1 <> 2
.th .go INDOK3
.if X&E69VFREKV1 = X1
.or X&E69VFREKV1 = X2
.or X&E69VFREKV1 = X3
.or X&E69VFREKV1 = X4
.th .go INDOK3
.el .go INDNEDF
...INDOK3
.* Er 4) Andet valgt skal Fri tekst udfyldes ******************************
.if &E69VNEDB1 = 2
.an X&E69VFREKV1 = X4
.an &L'&E69FRITXT1 = 0
.th .go INDNED4
.* Er rentesats for provision udfyldt skal F eller V markeres ***********
.if &L'&E69RPCT02 > 0
.th .go CHKFV
.el .go INDOK
...CHKFV
.if &U'&E69VALG1 = F
.or &U'&E69VALG1 = V
.th .go INDOK
.el .go INDPRO
.go INDOK
...INDMAXB
.mg/T/Maksimum skal være større end 0/
...INDKTOT
.mg/T/Konto MED eller UDEN kredit skal vælges/
...INDOVTB
.mg/T/Overtræksbeløb skal være større end 0/
...INDCIBJN
.mg/T/De skal vælges (J)a eller (N)ej til Debetrente følger Cibor 3/
...INDPCT
.mg/T/Rentesats skal udfyldes/
...INDKTON
.mg/T/Nedbringelse på én gang eller Løbende nedbringelse skal vælges/
...INDDATOE
.mg/T/Dato for Nedbringes skal vælges ved Nedbringelse på én gang/
...INDDATOL
