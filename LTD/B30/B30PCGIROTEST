.da AREAL1 6 7 width 74
.ar AREAL1 on
mellem (kunden)
.sp
.su off
.se SE = substr &KTOKUNDENR 1 2
.su on
.if &SE eq 00
.th &STILL
.th .br
.if &SE eq 43
.th &STILL
.th .br
&NAVN
.br
&COADR
.br
&GADE
.br
&BY
.su off
.sp 2
.se SE = substr &KTOKUNDENR 1 2
.su on
.if &SE eq 00
.th SE-nummer: &KTOKUNDENR
.th .sp
.th .go slut
.if &SE gt 32
.th Kundenummer: &KTOKUNDENR
.th .sp
.th .go slut
.if &SE le 31
.th CPR-nummer: &KTOKUNDENR
.th .sp
.th .go slut
...slut
.br
.su off
.se bruger = substr &RESULTA 1 2
.se brugere = substr &RESULTA 4 3
.se brugeren = substr &RESULTA 8 3
.se brugerer = substr &RESULTA 12 3
