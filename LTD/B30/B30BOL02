.**TEST PÅ KUN EN LÅNETYPE ************************************************
.se type = 0
.if &U'&B30ANDBO = J
.th .se type = &type + 1
.el .se type = &type
.if &U'&B30TILKRE = J
.th .se type = &type + 1
.el .se type = &type
.if &type = 0
.th .mg/T/Skriv J i feltet 'Andelsbolig' eller 'Tilbud om kredit'/
.if &type > 1
.th .mg/T/Vælg kun ét J i feltet 'Andelsbolig' eller 'Tilbud om kredit'/
.**TEST PÅ OPLYSNINGER OM NYT EJERPANTEBREV *******************************
.se nyep = 0
.if &L'&GENEJKR > 0
.th .se nyep = &nyep + 1
.el .se nyep = &nyep
.if &L'&B30EJBEL > 0
.th .se nyep = &nyep + 1
.el .se nyep = &nyep
.if &L'&GENEJTING > 0
.th .se nyep = &nyep + 1
.el .se nyep = &nyep
.if &U'X&B30BNYEP = XJ
.an &nyep = 0
.th .mg/T/Indtast oplysninger om nyt ejerpantebrev/
.if &U'X&B30BNYEP = XJ
.an &nyep < 3
.th .mg/T/Der mangler oplysninger om nyt ejerpantebrev/
.**TEST PÅ OPLYSNINGER OM GAMMELT EJERPANTEBREV **************************
.se glep = 0
.if &L'&GENBEP > 0
.th .se glep = &glep + 1
.el .se glep = &glep
.if &L'&B30BEJBEL > 0
.th .se glep = &glep + 1
.el .se glep = &glep
.if &L'&GENEKSEP > 0
.th .se glep = &glep + 1
.el .se glep = &glep
.if &L'&B30PBANK > 0
.th .se glep = &glep + 1
.el .se glep = &glep
.if &L'&GENGLTING > 0
.th .se glep = &glep + 1
.el .se glep = &glep
.if &U'&B30BGLEP = J
.an &glep = 0
.th .mg/T/Indtast oplysninger om gammelt ejerpantebrev/
.if &U'&B30BGLEP = J
.an &glep < 5
.th .mg/T/Der mangler oplysninger om gammelt ejerpantebrev/
