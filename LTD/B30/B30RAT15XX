.tp 88mm 90mm
.** FØRSTE og ANDEN BEGUNSTIGEDE *******
.if &l'&GENNAVNBD1 > 0
.th &GENNAVNBD1
.el .go BEGUN2
.if &l'&GENNAVNBD2 > 0
.th .ct ¤¤&GENNAVNBD2
.el .go EJBEGUN2
.br
&GENRELABD1 ¤¤&GENRELABD2
.br
.if &L'&GENCPRBD1 > 0
.th CPR.nr. &GENCPRBD1
.if &L'&GENCPRBD2 > 0
.th .ct ¤¤CPR.nr. &GENCPRBD2
.br
.if &GENPCTBD1 > 0,00
.an &GENPCTBD2 = 0,00
.th .mg /T/Enten ligedeling (pct=0,00) eller andel% > 0,00/
.if &GENPCTBD1 = 0,00
.an &GENPCTBD2 > 0,00
.th .mg /T/Enten ligedeling (pct=0,00) eller andel% > 0,00/
.if &GENPCTBD1 > 0,00
.th &GENPCTBD1 %
.if &GENPCTBD2 > 0,00
.th .ct ¤¤&GENPCTBD2 %
.sp
.go BEGUN3
...EJBEGUN2
.** FØRSTE og TREDIE  BEGUNSTIGEDE *******
.if &l'&GENNAVNBD3 > 0
.th .ct ¤¤&GENNAVNBD3
.el .go EJBEGUN3
.br
&GENRELABD1 ¤¤&GENRELABD3
.br
.if &L'&GENCPRBD1 > 0
.th CPR.nr. &GENCPRBD1
.if &L'&GENCPRBD3 > 0
.th .ct ¤¤CPR.nr. &GENCPRBD3
.br
.if &GENPCTBD1 > 0,00
.an &GENPCTBD3 = 0,00
.th .mg /T/Enten ligedeling (pct=0,00) eller andel% > 0,00/
.if &GENPCTBD1 = 0,00
.an &GENPCTBD3 > 0,00
.th .mg /T/Enten ligedeling (pct=0,00) eller andel% > 0,00/
.if &GENPCTBD1 > 0,00
