.*** Editering ***
.se hop = 0
.if &L'&STILL eq 0
.th .se hop = &hop + 1
.if &L'&NAVN eq 0
.th .se hop = &hop + 1
.if &L'&COADR eq 0
.th .se hop = &hop + 1
.if &L'&GADE eq 0
.th .se hop = &hop + 1
.if &L'&BY eq 0
.th .se hop = &hop + 1
.if &L'&LAND eq 0
.th .se hop = &hop + 1
.*** BREVSTART ***
.da AREAL1 35 8 body width 30 depth 3
.ar AREAL1 on
