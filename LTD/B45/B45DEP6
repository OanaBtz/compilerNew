.if &L'&a = 0 .an &L'&b = 0
.th &B45FRIL1A &B45FRIL1B &B45FRIL2A.&B45FRIL2B
.if &L'&a = 0 .an &L'&b = 1
.th &B45FRIL1A &B45FRIL1B.&B45FRIL2A.&B45FRIL2B
.if &L'&a = 1 .an &L'&b = 0
.th &B45FRIL1A.&B45FRIL1B &B45FRIL2A.&B45FRIL2B
.if &L'&a = 1 .an &L'&b = 1
.th &B45FRIL1A.&B45FRIL1B.&B45FRIL2A.&B45FRIL2B
...NOSUP
