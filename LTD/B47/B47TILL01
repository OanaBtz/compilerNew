.pm 20mm
.BR
.NV PAGE BANKSTED '%&EKSPBNKST.'
.BR
.NV PAGE BANK-EKSPEDIENT '%&BRUGERNR.'
.BR
.NV PAGE PRINTER '%&PRINTER.'
.BR
.NV PAGE TØMPOSTKASSE '%&U'&TØMPOST.'
.BR
.NV PAGE FORCERTØM '%&U'&FORCER.'
.BR
.NV PAGE PDFFORMAT '%&U'&PDFFORMAT.'
.********************************************************************
.*
.*  Ændret 31/1-2002 af Frank Rostved
.*
.*  - rentetilpasning 3 og 5 år er tilføjet.
.*
.*******************************************************************
.* Opsætter variable til styring af låne og rentetype
.*
.*    renttil = 0    =>  Billån
.*    renttil = 1    =>  Boliglån med rentetilpasning - 1 år
.*    renttil = 3    =>  Boliglån med rentetilpasning - 3 år
.*    renttil = 5    =>  Boliglån med rentetilpasning - 5 år
.*    renttil = 11   =>  Boliglån med rentetilpasning - 1 år
.*                       med varabel udnyttelse
.* REFRENT under 00,000
.*
.*    RENTE   = REFRENT * 10
.*    RENTTIL = 0
.*
.* REFRENT mellem 1,000 og 1,999
.*
.*    RENTE   = REFRENT alle enere/tiere, hvorefter det ganges med 10
.*    RENTTIL = 1
.*
.*
.*******************************************************************
.su off
.se RENTTIL = 0
.se FASTAAR = 0
.se KOMMA = ','
.se z = index &REFRENT ' '
.if &z eq 1
.th .se RFRENT = substr &REFRENT 2
.el .se RFRENT = &REFRENT
.se x = index &RFRENT ','
.if &x = 2
.th .se RENT1 = substr &RFRENT 3 1
.th .se RENT2 = substr &RFRENT 4 2
.th .su on
.th .se RENTE = &RENT1.&KOMMA.&RENT2.
.th .su off
.th .se LBTID = substr &RFRENT 1 1
.if &x = 3
.th .se RENT1 = substr &RFRENT 4 1
.th .se RENT2 = substr &RFRENT 5 2
.th .su on
.th .se RENTE = &RENT1.&KOMMA.&RENT2.
.th .su off
.th .se LBTID = substr &RFRENT 1 2
.se y = &L'&LBTID
.*---- BILLÅN
.if &LBTID eq 0
.th .se RENTTIL = 0
.th .se FASTAAR = 0
.*---- BOLIGLÅN MED RENTETILPASNING - 1 ÅR
.if &LBTID eq 1
.th .se RENTTIL = 1
.th .se FASTAAR = &LBTID
.*---- BOLIGLÅN MED RENTETILPASNING - 3 ÅR
.if &LBTID eq 3
.th .se RENTTIL = 3
.th .se FASTAAR = &LBTID
.*---- BOLIGLÅN MED RENTETILPASNING - 5 ÅR
.if &LBTID eq 5
.th .se RENTTIL = 5
.th .se FASTAAR = &LBTID
.*---- BOLIGLÅN MED RENTETILPASNING - 1 ÅR VARIABEL UDNYTTELSE.
.if &LBTID eq 11
.th .se RENTTIL = 11
.th .se FASTAAR = &LBTID
.su on
.*
.**********************************************************
.*
.*************** GENEREL OPSÆTNING ***************************************
.ti ¤ 05
:COUR10.
.fo left
.*************** AREAL-DEFINITIONER **************************************
.da VEND 7mm 270mm width 180mm rotate -90
.da OVERSKR 20mm 39mm width 175mm
.*************** ROTERET BREVNAVN ****************************************
.ar VEND on
:COUR6.
B47TILL01
.ar off
.*************** UDDATA-OVERSKRIFT ***************************************
.ar OVERSKR on
:SWISS12.:FED.
.us Særlige bestemmelser
:SKRSLUT.
.ar off
