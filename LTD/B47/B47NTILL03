.pm 20mm
.BR
.NV PAGE BANKSTED '%&EKSPBNKST.'
.BR
.NV PAGE BANK-EKSPEDIENT '%&BRUGERNR.'
.BR
.NV PAGE PRINTER '%&PRINTER.'
.BR
.NV PAGE TØMPOSTKASSE '%&U'&TØMPOST.'
.BR
.NV PAGE FORCERTØM '%&U'&FORCER.'
.BR
.NV PAGE PDFFORMAT '%&U'&PDFFORMAT.'
.*******************************************************************
.* Opsætter variable til styring af låne og rentetype
.*
.*    renttil = 0    =>  Billån
.*    renttil = 1    =>  Boliglån med rentetilpasning
.*    renttil = 2    =>  Boliglån med faste rente hele perioden
.*
.* REFRENT under 00,000
.*
.*    RENTE   = REFRENT * 10
.*    RENTTIL = 0
.*
.* REFRENT mellem 1,000 og 30,999
.*
.*    RENTE   = REFRENT alle enere/tiere, hvorefter det ganges med 10
.*    RENTTIL = 1
.*    FASTAAR = antal enere/tiere
.*
.* REFRENT over 31,000
.*
.*    RENTE   = REFRENT fratrukket alle enere/tiere
.*    RENTTIL = 2
.*    FASTAAR = 0   (fast rente i hele lånets periode)
.*
.*******************************************************************
.su off
.se RENTTIL = 0
.se FASTAAR = 0
.se KOMMA = ','
.se z = index &REFRENT ' '
.if &z eq 1
.th .se RFRENT = substr &REFRENT 2
.el .se RFRENT = &REFRENT
.se x = index &RFRENT ','
.if &x = 2
.th .se RENT1 = substr &RFRENT 3 1
.th .se RENT2 = substr &RFRENT 4 2
.th .su on
.th .se RENTE = &RENT1.&KOMMA.&RENT2.
.th .su off
.th .se LBTID = substr &RFRENT 1 1
.if &x = 3
.th .se RENT1 = substr &RFRENT 4 1
.th .se RENT2 = substr &RFRENT 5 2
.th .su on
.th .se RENTE = &RENT1.&KOMMA.&RENT2.
.th .su off
.th .se LBTID = substr &RFRENT 1 2
.se y = &L'&LBTID
.*---- BILLÅN
.if &LBTID eq 0
.th .se RENTTIL = 0
.th .se FASTAAR = 0
.*---- BOLIGLÅN MED RENTETILPASNING 1-9 år
.if &LBTID eq 1
.or &LBTID eq 2
.or &LBTID eq 3
.or &LBTID eq 4
.or &LBTID eq 5
.or &LBTID eq 6
.or &LBTID eq 7
.or &LBTID eq 8
.or &LBTID eq 9
.or &LBTID eq 10
.or &LBTID eq 11
.or &LBTID eq 12
.or &LBTID eq 13
.or &LBTID eq 14
.or &LBTID eq 15
.th .se RENTTIL = 1
.th .se FASTAAR = &LBTID
.*if &L'&LBTID gt 1
.*an &LBTID gt 0
.*th .se RENTTIL = 1
.*th .se FASTAAR = &LBTID
.*---- BOLIGLÅN MED FAST RENTES I HELE LÅNETS LØBETID
.if &LBTID eq 20
.th .se RENTTIL = 2
.th .se FASTAAR = 0
.su on
.*
.**********************************************************
.*
.*************** GENEREL OPSÆTNING ***************************************
.ti ¤ 05
:COUR10.
.fo left
.*************** AREAL-DEFINITIONER **************************************
.da VEND 7mm 270mm width 180mm rotate -90
.*************** ROTERET BREVNAVN ****************************************
.ar VEND on
:COUR6.
B47NTILL03
.ar off
.*************************************************************************
